<!DOCTYPE html>
<html>
  <head>
    <script src="/assets/sector.js"></script>
    <link href="/assets/css/form.css" rel="stylesheet" type="text/css" >
    <link href="/assets/css/table.css" rel="stylesheet" type="text/css" >
  </head>
  <body>
    <form >
      <div class="form-group">
        <label for="sector">Sector:</label>
        <input type="text" class="form-control" id="nombre" placeholder="Sector" required />
      </div>

      <div class="form-group">
        <label for="direccion">Direccion:</label>
        <input type="text" class="form-control" id="dir" placeholder="Direccion" />
      </div>

      <div class="form-group">
        <label for="telefono">Telefono:</label>
        <input type="text" class="form-control" id="tel" placeholder="Telefono" pattern="^[0-9]*$" title="campo numerico" />
      </div>

      <div class="form-group">
        <label for="email">Email:</label>
        <input type="email" class="form-control" id="email" placeholder="Email" />
      </div>

      <input type="hidden" id="sector-id" value="">
      <div class="form-group">
          <button type="reset" class="btn btn-default"><span class="glyphicon glyphicon-refresh"></span> Reset</button>
          <button type="submit" class="btn btn-success"><span class="glyphicon glyphicon-send"></span> Enviar</button>
      </div>
    </form>

    <% include partial/alert.ejs %>
    <div class="table-responsive">
    <table class="table table-condensed table-hover" id="sectors-table">
      <thead>
        <tr>
          <th>Nombre</th>
          <th>Direccion</th>
          <th>Telefono</th>
          <th>Email</th>
          <th>Seleccion</th>
        </tr>
      </thead>
      <tbody>
        <% client.sectores.forEach(function(sector){ %>
          <tr id="<%= sector._id %>">
            <td><strong> <%= sector.nombre %> </strong></td>
            <td> <%= sector.direccion %> </td>
            <td> <%= sector.tel %> </td>
            <td> <%= sector.email %> </td>
            <td> <input type="radio" name="sector-radio"> </td>
          </tr>
        <% }); %>
      </tbody>
    </table>
    <div class="buttons-content">
      <button type="button" class="btn btn-danger" id="delete-button"><span class="glyphicon glyphicon-remove"></span> Eliminar</button>
      <button type="button" class="btn btn-default" id="edit-button"><span class="glyphicon glyphicon-pencil"></span> Editar</button>
    </div>
  </div>
  </body>
</html>
